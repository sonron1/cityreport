            background: #f8f9fa;
        }
        .method-btn.active {
            border-color: #007bff;
            background: #e7f3ff;
        }
        .location-status {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(0,0,0,0.8);
            color: white;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.8rem;
            z-index: 1000;
        }
    </style>
{% endblock %}

