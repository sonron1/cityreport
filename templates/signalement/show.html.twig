{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // ✅ FONCTION pour basculer entre affichage et édition
        function toggleEditMode(commentaireId) {
            const displayDiv = document.getElementById(`comment-display-${commentaireId}`);
            const editDiv = document.getElementById(`comment-edit-${commentaireId}`);

            if (displayDiv.style.display === 'none') {
                // Retour au mode affichage
                displayDiv.style.display = 'block';
                editDiv.style.display = 'none';
            } else {
                // Passage au mode édition
                displayDiv.style.display = 'none';
                editDiv.style.display = 'block';

                // Focus sur le textarea
                const textarea = editDiv.querySelector('textarea');
                if (textarea) {
                    textarea.focus();
                    // Positionner le curseur à la fin
                    textarea.setSelectionRange(textarea.value.length, textarea.value.length);
                }
            }
        }

        // ✅ GESTION des raccourcis clavier
        document.addEventListener('keydown', function(event) {
            // Échap pour annuler l'édition
            if (event.key === 'Escape') {
                const editForms = document.querySelectorAll('[id^="comment-edit-"]');
                editForms.forEach(form => {
                    if (form.style.display !== 'none') {
                        const commentaireId = form.id.replace('comment-edit-', '');
                        toggleEditMode(commentaireId);
                    }
                });
            }
        });

        // Fonction pour ouvrir le modal et afficher l'image en plein écran
        function openImageModal(imageUrl) {
            document.getElementById('fullscreen-image').src = imageUrl;
            var imageModal = new bootstrap.Modal(document.getElementById('imageModal'));
            imageModal.show();
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Récupérer les coordonnées du signalements
            const latitude = {{ signalement.latitude }};
            const longitude = {{ signalement.longitude }};

            // Initialiser la carte centrée sur le signalements avec un zoom approprié
            const map = L.map('detail-map').setView([latitude, longitude], 15);

            // Ajouter la couche de tuiles (OpenStreetMap)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                maxZoom: 19,
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);

            // Créer l'icône personnalisée pour le marqueur
            const customIcon = L.icon({
                iconUrl: '/images/markers/marker-black.png',
                shadowUrl: '/images/markers/marker-shadow.png',
                iconSize: [25, 41],
                shadowSize: [41, 41],
                iconAnchor: [12, 41],
                shadowAnchor: [12, 41],
                popupAnchor: [1, -34]
            });

            // Ajouter un marqueur à la position du signalements
            const marker = L.marker([latitude, longitude], {
                icon: customIcon,
                title: "{{ signalement.titre }}"
            }).addTo(map);

            // Ajouter une popup avec les informations du signalements
            marker.bindPopup(`
                <div class="popup-content">
                    <h5 class="mb-2 fw-bold">{{ signalement.titre }}</h5>
                    <p class="mb-1"><i class="bi bi-tag me-1"></i> <strong>Catégorie:</strong> {{ signalement.categorie.nom }}</p>
                    <p class="mb-1"><i class="bi bi-geo-alt me-1"></i> <strong>Lieu:</strong> {{ signalement.ville.nom }}</p>
                    <p class="mb-1"><i class="bi bi-calendar me-1"></i> <strong>Date:</strong> {{ signalement.dateSignalement|date('d/m/Y') }}</p>
                </div>
            `).openPopup();

            // Ajouter un cercle pour indiquer la zone approximative
            L.circle([latitude, longitude], {
                color: '{{ signalement.categorie.couleur }}',
                fillColor: '{{ signalement.categorie.couleur }}',
                fillOpacity: 0.2,
                radius: 100 // Rayon en mètres
            }).addTo(map);

            // Rafraîchir la carte quand on change d'onglet
            document.querySelectorAll('button[data-bs-toggle="tab"]').forEach(tab => {
                tab.addEventListener('shown.bs.tab', function() {
                    map.invalidateSize();
                });
            });

            // Initialiser les tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
{% endblock %}