{# templates/moderateur/signalements/_validate_modal.html.twig #}
<div class="modal" id="validateModal{{ signalement.id }}" tabindex="-1" aria-labelledby="validateModalLabel{{ signalement.id }}" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="validateModalLabel{{ signalement.id }}">
                    <i class="fas fa-check me-2"></i>Valider le signalement
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="{{ path('app_moderateur_valider', {'id': signalement.id}) }}" method="post" class="validate-form">
                <div class="modal-body">
                    <div class="alert alert-success d-flex align-items-center">
                        <i class="fas fa-check-circle me-3"></i>
                        <div>
                            <strong>Confirmer la validation de ce signalement ?</strong>
                            <div class="small mt-1">Ce signalement sera publié et visible publiquement.</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h6 class="mb-2"><i class="fas fa-file-alt me-2"></i>Signalement #{{ signalement.id }}</h6>
                        <div class="p-3 bg-light rounded">
                            <p class="mb-1 fw-semibold">{{ signalement.titre }}</p>
                            <small class="text-muted">
                                <i class="fas fa-map-marker-alt me-1"></i>
                                {% if signalement.ville %}{{ signalement.ville.nom }}{% else %}Localisation non définie{% endif %}
                            </small>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Annuler
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-2"></i>Valider le signalement
                    </button>
                </div>
                <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ signalement.id) }}">
            </form>
        </div>
    </div>
</div>