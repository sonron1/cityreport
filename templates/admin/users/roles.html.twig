    <!-- Actions en lot avec design am√©lior√© -->
    <div class="bulk-actions-card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6>
                <i class="fas fa-tasks me-2 text-primary"></i>
