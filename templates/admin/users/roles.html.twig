                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Gestion de la s√©lection multiple avec animations
        function updateSelectionCounter() {
            const checkboxes = document.querySelectorAll('.user-checkbox:checked');
            const counter = document.getElementById('selectionCounter');
            const countSpan = document.getElementById('selectedCount');
            const bulkBtn = document.getElementById('bulkActionBtn');

            countSpan.textContent = checkboxes.length;

            if (checkboxes.length > 0) {
                counter.style.display = 'inline-block';
                bulkBtn.disabled = false;
                bulkBtn.classList.add('pulse-animation');
            } else {
                counter.style.display = 'none';
                bulkBtn.disabled = true;
                bulkBtn.classList.remove('pulse-animation');
            }
        }

        function toggleSelectAll() {
            const checkboxes = document.querySelectorAll('.user-checkbox');
            const selectAll = document.getElementById('selectAllCheckbox');

            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAll.checked;
            });
            updateSelectionCounter();
        }

        function selectAll() {
            const checkboxes = document.querySelectorAll('.user-checkbox');
            const selectAllCheckbox = document.getElementById('selectAllCheckbox');

            checkboxes.forEach(checkbox => checkbox.checked = true);
            selectAllCheckbox.checked = true;
            updateSelectionCounter();
        }

        function selectNone() {
            const checkboxes = document.querySelectorAll('.user-checkbox');
            const selectAllCheckbox = document.getElementById('selectAllCheckbox');

            checkboxes.forEach(checkbox => checkbox.checked = false);
            selectAllCheckbox.checked = false;
            updateSelectionCounter();
        }

        // Changement de r√¥le individuel avec animation
        function changeUserRole(userId, newRole, userName, roleLabel) {
            document.getElementById('modalUserId').value = userId;
            document.getElementById('modalRole').value = newRole;
            document.getElementById('userName').textContent = userName;
            document.getElementById('newRoleLabel').textContent = roleLabel;

            const modal = new bootstrap.Modal(document.getElementById('roleChangeModal'));
            modal.show();
        }

        // Confirmation am√©lior√©e des actions en lot
        function confirmBulkAction() {
            const selectedUsers = document.querySelectorAll('.user-checkbox:checked');
            const newRole = document.querySelector('select[name="bulk_role"]').value;

            if (selectedUsers.length === 0) {
                // Toast notification instead of alert
                showToast('warning', 'Veuillez s√©lectionner au moins un utilisateur.');
                return false;
            }

            if (!newRole) {
                showToast('warning', 'Veuillez s√©lectionner un r√¥le.');
                return false;
            }

            const roleLabels = {
                'ROLE_USER': 'Citoyen',
                'ROLE_MODERATOR': 'Mod√©rateur',
                'ROLE_ADMIN': 'Administrateur'
            };

            return confirm(
                `üîÑ Changement de r√¥le en lot\n\n` +
                `Utilisateurs s√©lectionn√©s: ${selectedUsers.length}\n` +
                `Nouveau r√¥le: ${roleLabels[newRole]}\n\n` +
                `Confirmez-vous cette action ?`
            );
        }

        // Toast notifications
        function showToast(type, message) {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} position-fixed top-0 end-0 m-3`;
            toast.style.zIndex = '9999';
            toast.innerHTML = `
                <i class="fas fa-${type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                ${message}
            `;

            document.body.appendChild(toast);

            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Animation de survol pour les cartes stats
        document.addEventListener('DOMContentLoaded', function() {
            const statsCards = document.querySelectorAll('.stats-card');

            statsCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px) scale(1.02)';
                });

                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Initialiser le compteur de s√©lection
            updateSelectionCounter();
        });

        // Effet de recherche en temps r√©el (optionnel)
        const searchInput = document.getElementById('search');
        if (searchInput) {
            let searchTimeout;
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    // Ici vous pourriez ajouter une recherche AJAX en temps r√©el
                }, 500);
            });
        }
    </script>
{% endblock %}