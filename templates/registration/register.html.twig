            padding: 0.75rem;
            border-radius: 8px;
            background: #f8f9fa;
            border: 1px solid #e9ecef;
        }

        .strength-meter {
            height: 4px;
            background: #e9ecef;
            border-radius: 2px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .strength-bar {
            height: 100%;
            transition: var(--transition);
            border-radius: 2px;
        }

        .strength-text {
            font-size: 0.8rem;
            font-weight: 600;
        }

        /* Checkbox personnalis√©e am√©lior√©e */
        .custom-checkbox {
            margin: 2.5rem 0;
            padding: 2rem;
            background: linear-gradient(135deg, #f8f9ff 0%, #e8f0fe 100%);
            border-radius: 12px;
            border: 2px solid #e3f2fd;
            position: relative;
            overflow: hidden;
        }

        .custom-checkbox::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, transparent 49%, rgba(41, 128, 185, 0.05) 50%, transparent 51%);
        }

        .custom-checkbox .form-check {
            position: relative;
            z-index: 2;
        }

        .custom-checkbox .form-check-input {
            width: 1.4rem;
            height: 1.4rem;
            border: 2px solid #2980b9;
            border-radius: 6px;
            margin-right: 1rem;
            transition: var(--transition);
        }

        .custom-checkbox .form-check-input:checked {
            background: var(--primary-gradient);
            border-color: #2980b9;
            transform: scale(1.05);
        }

        .custom-checkbox .form-check-label {
            font-weight: 500;
            color: #2c3e50;
            line-height: 1.6;
        }

        /* Bouton am√©lior√© */
        .btn-register {
            background: var(--success-gradient);
            border: none;
            border-radius: 12px;
            padding: 1.2rem;
            font-weight: 700;
            font-size: 1.1rem;
            letter-spacing: 0.5px;
            transition: var(--transition);
            box-shadow: 0 6px 20px rgba(46, 204, 113, 0.3);
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .btn-register::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
