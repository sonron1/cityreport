        }

        .register-header::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 0;
            border-left: 25px solid transparent;
            border-right: 25px solid transparent;
            border-top: 25px solid #2980b9;
            filter: drop-shadow(0 5px 10px rgba(0,0,0,0.1));
