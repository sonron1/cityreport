        }

        .btn-register:hover::before {
            left: 100%;
        }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(46, 204, 113, 0.4);
            background: var(--success-gradient);
        }

        .btn-register:active {
            transform: translateY(-1px);
        }

        /* Loading state */
        .btn-register.loading {
            pointer-events: none;
            background: #6c757d;
        }

        /* Messages d'erreur styl√©s */
        .form-text.text-danger {
            color: #dc3545 !important;
            font-size: 0.875rem;
            margin-top: 0.5rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            animation: shake 0.5s ease-in-out;
        }

        @keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        /* Tooltip d'aide */
        .help-tooltip {
            position: relative;
            display: inline-block;
            margin-left: 0.5rem;
            cursor: help;
        }

        .help-tooltip .tooltip-text {
            visibility: hidden;
            width: 220px;
            background: #2c3e50;
            color: white;
            text-align: center;
            border-radius: 8px;
            padding: 0.75rem;
            position: absolute;
            z-index: 1000;
            bottom: 125%;
            left: 50%;
            margin-left: -110px;
            opacity: 0;
            transition: var(--transition);
            font-size: 0.8rem;
            font-weight: 400;
        }

        .help-tooltip:hover .tooltip-text {
            visibility: visible;
            opacity: 1;
        }

        /* Am√©lioration des √©l√©ments flottants */
        .floating-elements {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
            overflow: hidden;
        }

        .floating-element {
            position: absolute;
            opacity: 0.03;
            animation: float 12s ease-in-out infinite;
        }

        .floating-element:nth-child(1) {
            top: 10%;
            left: 10%;
            animation-delay: 0s;
        }

        .floating-element:nth-child(2) {
            top: 20%;
            right: 15%;
            animation-delay: 4s;
        }

        .floating-element:nth-child(3) {
            bottom: 30%;
            left: 20%;
            animation-delay: 8s;
        }

        .floating-element:nth-child(4) {
            bottom: 15%;
            right: 10%;
            animation-delay: 2s;
        }

        .floating-element:nth-child(5) {
            top: 50%;
            left: 50%;
            animation-delay: 6s;
        }

        /* Responsive am√©lior√© */
        @media (max-width: 768px) {
            .register-container {
                padding: 1rem 0.5rem;
            }

            .register-wrapper {
                max-width: 100%;
            }

            .register-header {
                padding: 2.5rem 1.5rem 2rem;
            }

            .register-body {
                padding: 2rem 1.5rem;
            }

            .app-logo {
                font-size: 3rem;
            }

            .register-title {
                font-size: 1.6rem;
            }

            .form-control, .form-select {
                height: 52px;
                font-size: 0.95rem;
            }

            .input-group-text {
                width: 50px;
            }

            .progress-indicator {
                display: none;
            }
        }

        @media (max-width: 480px) {
            .register-container {
                padding: 0.5rem;
            }

            .register-header {
                padding: 2rem 1rem 1.5rem;
            }

            .register-body {
                padding: 1.5rem 1rem;
            }

            .custom-checkbox {
                padding: 1.5rem;
            }
        }
    </style>
{% endblock %}

