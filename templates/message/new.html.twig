{% extends 'base.html.twig' %}

{% block title %}Nouveau message - CityFlow{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <!-- En-tête -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h3">
                        <i class="fas fa-plus me-2 text-success"></i>
                        Nouveau message
                    </h1>
                    <div>
                        <a href="{{ path('app_messages_inbox') }}" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-left me-1"></i> Retour aux messages
                        </a>
                    </div>
                </div>

                <!-- Formulaire -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-12 mb-3">
                                {{ form_label(form.destinataire, 'Destinataire', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.destinataire, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.destinataire) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 mb-3">
                                {{ form_label(form.sujet, 'Sujet', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.sujet, {'attr': {'class': 'form-control', 'placeholder': 'Objet du message'}}) }}
                                {{ form_errors(form.sujet) }}
                            </div>
                        </div>

                        {% if form.signalementConcerne is defined %}
                            <div class="row">
                                <div class="col-12 mb-3">
                                    {{ form_label(form.signalementConcerne, 'Signalement concerné (optionnel)', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.signalementConcerne, {'attr': {'class': 'form-select'}}) }}
                                    {{ form_errors(form.signalementConcerne) }}
                                    <div class="form-text">
                                        Sélectionnez un signalement si votre message s'y rapporte.
                                    </div>
                                </div>
                            </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-12 mb-3">
                                {{ form_label(form.contenu, 'Message', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'rows': '8', 'placeholder': 'Tapez votre message ici...'}}) }}
                                {{ form_errors(form.contenu) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_messages_inbox') }}" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane me-1"></i> Envoyer
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}